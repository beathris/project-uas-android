<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".TokoActivity">

    <ImageView
        android:id="@+id/iv_brand"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout1"
        android:layout_below="@+id/iv_brand"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPWP                : "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="7dp"/>

        <EditText
            android:layout_width="200dp"
            android:background="@color/Sea_Blue"
            android:layout_height="wrap_content"
            android:id="@+id/et_npwp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email                 : "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="7dp"/>

        <EditText
            android:layout_width="200dp"
            android:background="@color/Sea_Blue"
            android:layout_height="wrap_content"
            android:id="@+id/et_email"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat              : "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="7dp"/>

        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/Sea_Blue"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout5"
        android:layout_below="@+id/layout3"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telpon               : "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="7dp"/>

        <EditText
            android:layout_width="200dp"
            android:background="@color/Sea_Blue"
            android:layout_height="wrap_content"
            android:id="@+id/et_telp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout4"
        android:layout_below="@+id/layout5"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jml Lapangan : "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="7dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/Sea_Blue"
            android:id="@+id/et_jml_lap"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_simpan"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/layout4"
        android:layout_centerHorizontal="true"

        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:letterSpacing="0.2"

        android:contentDescription="@string/app_text"
        android:text="SIMPAN" />

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_simpan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:background="@color/colorAccent"
        android:contentDescription="@string/app_text"
        android:letterSpacing="0.2"
        android:text="KEMBALI"

        android:textColor="@color/colorWhite"
        android:textSize="16sp" />


</RelativeLayout>